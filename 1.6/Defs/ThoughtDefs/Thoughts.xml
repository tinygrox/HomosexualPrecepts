  <!-- FFF -->
  <ThoughtDef>
    <defName>HomoThought_Heterosexual_Abhorrent</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <!-- <workerClass>HomosexualPrecepts.ThoughtWorkers.ThoughtWorker_Precept_Heterosexual_Abhorrent</workerClass> -->
    <workerClass>HomosexualPrecepts.ThoughtWorkers.ThoughtWorker_Orientation_Social</workerClass>
    <stages>
      <li>
        <label>Heterosexual</label>
        <baseOpinionOffset>-10</baseOpinionOffset>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Bisexual</li>
    </nullifyingTraits>

    <!-- 厌恶异性恋 -->
    <!-- 1.非 Gay Bisexual Asexual 2.有异性伴侣 -->
    <modExtensions>
      <li Class="HomosexualPrecepts.DefModExtensions.ThoughtConfigModExtension">
        <!-- 不受影响的 Trait -->
        <traitsAccepted>
          <li>Gay</li>
          <li>Bisexual</li>
          <li>Asexual</li>
        </traitsAccepted>
        <!-- 是否厌恶异性恋 -->
        <heterosexualAbhorrent>true</heterosexualAbhorrent>
      </li>
    </modExtensions>
  </ThoughtDef>

