    </nullifyingTraits>

    <modExtensions>
      <li Class="HomosexualPrecepts.DefModExtensions.ThoughtConfigModExtension">
        <traitsAccepted>
          <li>Gay</li>
          <li>Bisexual</li>
          <li>Asexual</li>
        </traitsAccepted>
        <heterosexualAbhorrent>true</heterosexualAbhorrent>
      </li>
    </modExtensions>
  </ThoughtDef>
</Defs>
