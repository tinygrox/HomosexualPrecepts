<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- 女同 -->
  <ThoughtDef>
    <defName>HomoThought_Lesbian_Abhorrent</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <!-- <workerClass>HomosexualPrecepts.ThoughtWorkers.ThoughtWorker_Precept_Lesbian_Abhorrent</workerClass> -->
    <workerClass>HomosexualPrecepts.ThoughtWorkers.ThoughtWorker_Orientation_Social</workerClass>
    <stages>
      <li>
        <label>Lesbian</label>
        <baseOpinionOffset>-10</baseOpinionOffset>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Gay</li>
      <li>Bisexual</li>
    </nullifyingTraits>

    <!-- 用法示例 -->
    <!-- 女同：厌恶 —— 1.只针对女性 2.是 Gay 3.有同性伴侣 -->
    <modExtensions>
      <li Class="HomosexualPrecepts.DefModExtensions.ThoughtConfigModExtension">
        <genderRequirement>Female</genderRequirement>        <!-- 只检查女性 -->
        <traitsAbhorrent>
          <li>Gay</li>          <!-- 对方拥有 Gay 特质就破戒 -->
        </traitsAbhorrent>
        <sameSexAbhorrent>true</sameSexAbhorrent>        <!-- 对方存在同性关系就破戒 -->
      </li>
    </modExtensions>
  </ThoughtDef>

  <ThoughtDef>
    <defName>HomoThought_ColonyLesbian_Abhorrent</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <!-- <workerClass>HomosexualPrecepts.ThoughtWorkers.ThoughtWorker_Precept_ColonyLesbianAbhorrent</workerClass> -->
    <workerClass>HomosexualPrecepts.ThoughtWorkers.ThoughtWorker_Orientation_Colony</workerClass>
    <stages>
      <li>
        <label>Lesbian in Colony</label>
        <description>Our community is damn by those lesbian.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Gay</li>
      <li>Bisexual</li>
    </nullifyingTraits>

    <!-- 殖民地女同判断 -->
    <!-- 1.只针对女性 2.是 Gay 3.有同性伴侣 -->
    <modExtensions>
      <li Class="HomosexualPrecepts.DefModExtensions.ThoughtConfigModExtension">
        <genderRequirement>Female</genderRequirement>
        <traitsAbhorrent>
          <li>Gay</li>
        </traitsAbhorrent>
        <sameSexAbhorrent>true</sameSexAbhorrent>
      </li>
    </modExtensions>
  </ThoughtDef>

